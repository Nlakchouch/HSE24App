<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="-2dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/bg_menu"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="@dimen/medium_size_padding"
        >

        <TextView
            android:id="@+id/menu_titre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_size_margin"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_size_text" />

        <ImageView
            android:id="@+id/menu_toggle"
            android:layout_width="@dimen/thumbnail_size_small"
            android:layout_height="@dimen/thumbnail_size_small"
            android:layout_marginEnd="@dimen/medium_size_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/menu_toggle" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/medium_size_margin"
        android:src="@drawable/divider" />

</RelativeLayout>